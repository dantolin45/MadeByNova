<div class="row row-cols-1 row-cols-md-2 g-3">

  @foreach (var item in ViewBag.Articulo)
  {
    <div class="card" style="width: 500px; margin-left: 100px; margin-top: 20px; padding: 0px;">
     
      <img src='@item.ImagenArticulo' class="card-img-top" style="width: 100%; background: white;"
        alt="imagen articulo"/>

      <div class="card-body">
        <h5 class="card-title">@item.Nombre</h5>
        <br>
        <h5>$ @item.Precio ARS</h5>
        
        <form action='@Url.Action("Compra", "Home")'>
                <div class="text-center">
                    <input type="submit" id="btn-check" value="Comprar articulo" class="btn btn-primary mt-auto">
                    <input type="hidden" name="IdArticulo" value="@ViewBag.Articulo.IdArticulo">
                </div>
                </form>
        
        <a data-bs-toggle="modal" data-bs-target="#modalCompra" class="btn" onclick="GetDescripcion(@item.IdArticulo)">Comprar</a>
    
      </div>
    </div>
  }
</div>


<!-- Modal -->

<section class="modal" id="modalCompra">
        <div class="modal__container">
       
            <h2 class="modal__title">Inicia sesion</h2>
             <p class="modal__paragraph">
              <div class="center">
                <form action='@Url.Action("BuscarCliente", "Home")'>
                    <div class="login"> 
                    <label >Username</label>
                    <input type="text" name="nombre" required>
                      </div>
                      
                       <div class="login"> 
                    <label >Password</label>
                    <input type="text" name="contraseña" required>
                      </div>
                      
                          <div class="btn">
                          <div class="inner"></div>
                            <button type="submit" >Iniciar Sesion
                        </div> 
                        <div class="btn">
                          <div class="inner"></div>
                        <button href="#" class="modal__close" >Cerrar</button>
                      </div>
                      </form>
                 </div>
                 </div>
                   </p>
           
        </div>
    </section>
