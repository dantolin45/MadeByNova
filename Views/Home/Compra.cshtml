@{
    ViewData["Title"] = "Compra Page";
    
}
<section class="py-5">
    
    <div class="container px-4 px-lg-5 mt-5">

        <div class="card" style="width: 500px;  padding: 0px;">
            <img src="@ViewBag.DetalleArticulo.ImagenArticulo" class="card-img-top rounded float-start" style="width: 100%; background: white;" alt="imagen articulo"/>   
            <p>@ViewBag.DetalleArticulo.Nombre</p>
            <div class="card-body">
                <br>
                <h5>$ @ViewBag.DetalleArticulo.Precio ARS</h5> 
            </div>
        </div>
                
                <form action='@Url.Action("GuardarCompra", "Home")' method="post" enctype="multipart/form-data" id="form" class="float-end ">   
        <div class="modal-body ">

                <div class="form-outline">
                    <input type="text" id="form12" name="Nombre" class="form-control" value=@DBRopa.clienteLogueado.nombre/>
                    <label class="form-label" for="form12">Ingrese su nombre</label>
                </div>
                <br>
                <div class="form-outline">
                   
                    <label class="form-label" for="form12">Ingrese el medio de pago (tarjeta/efectivo)</label>
                    <select id="cars" name="MedioDePago">
                        <option value="visa">Tarjeta Visa</option>
                        <option value="mastercard">Tarjeta Master Card</option>
                        <option value="mercadopago">Mercado Pago</option>
                        <option value="Efectivo">Efectivo</option>
                    </select>


                </div>
                <br>
                <div class="form-outline">
                    <input type="text" id="form12" name="Direccion" class="form-control" value=@DBRopa.clienteLogueado.direccion />
                    <label class="form-label" for="form12">Ingrese su direccion</label>
                </div>
                <br>
                <div class="form-outline">
                    <input type="email" id="form12" name="Email" class="form-control" value=@DBRopa.clienteLogueado.mail />
                    <label class="form-label" for="form12">Ingrese su email</label>
                </div>
                <div class="form-outline">
                    <input type="tel" id="form12" name="Telefono" class="form-control" value=@DBRopa.clienteLogueado.telefono />
                    <label class="form-label" for="form12">Ingrese su telefono</label>
                </div>
                
        
        <input type="hidden" name="IdArticulo" value="@ViewBag.Articulo">
            
          </div>
          <div class="modal-footer">
            <button  type="button" class="btn btn-secondary">Close</button>
            <button type="submit" class="btn btn-primary" href='@Url.Action("Cliente", "Home")'  value="Save Changes" id="">
          </div>
       </form>
            </div>
            


    </section>

      